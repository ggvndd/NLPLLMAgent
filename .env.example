# Environment Configuration for Career Coach Agent
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# LLM Provider Configuration
# Choose either "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Application Environment
ENVIRONMENT=development

# Optional: Advanced Configuration
MAX_RESUME_LENGTH=10000
MAX_INTERVIEW_QUESTIONS=10
DEFAULT_TIMEOUT=30

# Security Note: 
# Never commit your actual .env file with real API keys to version control!
# Add .env to your .gitignore file.